\mode<presentation>


\definecolor{owred}{RGB}{194,24,0}
\colorlet{owred100}{owred}
\colorlet{owred75} {owred!75!white}
\colorlet{owred50} {owred!50!white}
\colorlet{owred25} {owred!25!white}
\colorlet{owred10} {owred!10!white}
\colorlet{owred5}  {owred!5!white}

\definecolor{owgrey}{RGB}{135,135,135}
\colorlet{owgrey75} {owgrey!75!white}
\colorlet{owgrey50} {owgrey!50!white}
\colorlet{owgrey25} {owgrey!25!white}
\colorlet{owgrey10} {owgrey!10!white}
\colorlet{owgrey5}  {owgrey!5!white}


\setbeamercolor*{palette primary}{use=structure,fg=white,bg=owgrey}
\setbeamercolor*{palette secondary}{use=structure,fg=white,bg=owgrey!75!black}
\setbeamercolor*{palette tertiary}{use=structure,fg=white,bg=owgrey!50!black}
\setbeamercolor*{palette quaternary}{fg=white,bg=black}

\setbeamercolor*{sidebar}{use=structure,bg=structure.fg}

\setbeamercolor*{palette sidebar primary}{use=structure,fg=structure.fg!10}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{use=structure,fg=structure.fg!50}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

\setbeamercolor{block title}{fg=black, bg=owgrey50}
\setbeamercolor{block body}{parent=normal text, bg=owgrey25}

\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor*{item}{fg=owred}

\setbeamercolor{structure}{fg=black,bg=owgrey}%
\setbeamercolor{normal text}{fg=black}%
\setbeamercolor{frametitle}{fg=owred}%
\setbeamercolor{frame number in foot}{fg=white}%
\setbeamercolor{title}{fg=owred}%
\setbeamercolor{subtitle}{fg=black}%
\setbeamercolor{author}{fg=owgrey}
\mode
<all>
